<!DOCTYPE html>
<html>
<head>
  <title>Imagegard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <!-- header will go here --!>
    <div class="row">
      <div class="col-lg-10"></div>
      <div class="col-lg-2"><p class="text-right">
        <% if user_signed_in? %>
          <%= link_to 'Logout', destroy_user_session_path, :method => :delete, :class => 'btn btn-primary' %>
        <% else %>
          <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), :class => 'btn btn-primary' %><br />
        <% end %>
      </p></div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <% if notice %><p class="alert alert-info"><%= notice %></p><% end %>
        <% if alert %><p class="alert alert-danger"><%= alert %></p><% end %>
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
